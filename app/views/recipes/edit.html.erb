<h1>Edit Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="patch">
  <div>
    Title: <input type="text" name="form_title" value="<%= @recipe.title %>">
  </div>
  <div>
    Chef: <input type="text" name="form_chef" value="<%= @recipe.chef %>">
  </div>
  <div>
    Prep time: <input type="text" name="form_prep_time" value="<%= @recipe.prep_time %>">
  </div>
  <div>
    Ingredients: <input type="text" name="form_ingredients" value="<%= @recipe.ingredients %>">
  </div>
  <div>
    Directions: <input type="text" name="form_directions" value="<%= @recipe.directions %>">
  </div>
  <div>
    Image url: <input type="text" name="form_image_url" value="<%= @recipe.image_url %>">
  </div>
  <input type="submit" value="Update recipe">
</form>
